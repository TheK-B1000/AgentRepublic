        },
        {
            "name": "performance",
            "weight": 0.15,
            "passCondition": "Lighthouse performance score >= 80",
            "scoring": "numeric"
        },
        {
            "name": "accessibility",
            "weight": 0.15,
            "passCondition": "No critical a11y violations",
            "scoring": "count of violations, pass = 0 critical"
        }
