        "brand_colors": [
            "#2563EB",
            "#1E40AF",
            "#FFFFFF"
        ],
        "required_sections": [
            "hero",
            "features",
            "pricing",
            "cta"
        ]
    },
    "criteria": [
        {
            "name": "structure_completeness",
            "weight": 0.25,
